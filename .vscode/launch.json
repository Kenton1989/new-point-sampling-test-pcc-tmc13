    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++.exe - Build and debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\build\\tmc3\\tmc3.exe",
            "args": [
                // "--uncompressedDataPath=\"pc-samples\\andrew9_frame0027.ply\"",
                // "--compressedStreamPath=\"compressed\\andrew9_frame0027.tmc3\"",
                // "--attribute=color"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}\\..",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++.exe build"
        }
    ]
}